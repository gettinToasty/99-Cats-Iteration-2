<h1>Cats upon cats!</h1>

<ul>
  <% @cats.each do |cat| %>
    <li><%= link_to cat.name, cat_url(cat) %></li>
  <% end %>
</ul>

<% if current_user %>
  <%= link_to "Create cat", new_cat_url %>
  <br><br>
  <%= link_to "Rent a cat", new_cat_rental_request_url %>
<% end %>

<% content_for :footer do %>
  <p>There are currently <%= @cats.length %> cats in out database.</p>
<% end %>
